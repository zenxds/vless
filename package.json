{
  "name": "node-lib-boilerplate",
  "version": "0.1.0",
  "description": "node lib boilerplate",
  "main": "lib/index.js",
  "scripts": {
    "start": "nodemon",
    "compile": "tsc --build tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "lint": "eslint src/**/*.ts",
    "prettier": "prettier src/**/*.ts --write",
    "docker:build": "docker build -t zenxds/vless:latest .",
    "test": "jest ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "yarn lint",
      "yarn test",
      "yarn prettier",
      "yarn compile",
      "git add ."
    ]
  },
  "author": "zenxds",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/repo.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/ws": "^8.5.13",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pm2": "^5.4.3",
    "ws": "^8.18.0"
  }
}